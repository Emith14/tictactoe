<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2"
    android:padding="10dp">

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Puntuaje"/>

    <TextView
        android:id="@+id/txt2"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txt1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/txt3"
        android:text="Puntos x: "/>

    <TextView
        android:id="@+id/txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/txt2"
        app:layout_constraintTop_toBottomOf="@+id/txt1"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Puntos O: "/>


    <LinearLayout
        android:id="@+id/lin1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/txt2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="60dp">

            <Button
                android:backgroundTint="@color/black"
                android:id="@+id/btn1"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text="."
                android:textSize="30sp"
                android:tag="1"
                />

            <Button
                android:backgroundTint="@color/black"
                android:id="@+id/btn2"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text="."
                android:textSize="30sp"
                android:tag="2"
                />

            <Button
                android:backgroundTint="@color/black"
                android:id="@+id/btn3"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text="."
                android:textSize="30sp"
                android:tag="3"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="60dp">

            <Button
                android:backgroundTint="@color/black"
                android:id="@+id/btn4"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text="."
                android:textSize="30sp"
                android:tag="4"
                />

            <Button
                android:backgroundTint="@color/black"
                android:id="@+id/btn5"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text="."
                android:textSize="30sp"
                android:tag="5"
                />

            <Button
                android:backgroundTint="@color/black"
                android:id="@+id/btn6"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text="."
                android:textSize="30sp"
                android:tag="6"
                />


        </LinearLayout>

        <LinearLayout
            android:backgroundTint="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="60dp">

            <Button
                android:backgroundTint="@color/black"
                android:id="@+id/btn7"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text="."
                android:textSize="30sp"
                android:tag="7"
                />

            <Button
                android:backgroundTint="@color/black"
                android:id="@+id/btn8"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text="."
                android:textSize="30sp"
                android:tag="8"
                />

            <Button
                android:backgroundTint="@color/black"
                android:id="@+id/btn9"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text="."
                android:tag="9"
                android:textSize="30sp"
                android:textColor="@color/white"
                />


        </LinearLayout>

    </LinearLayout>





<TextView
    android:id="@+id/textovic"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/lin1"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:text="."/>

    <Button
        android:id="@+id/btnreini"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reiniciar"
        app:layout_constraintTop_toBottomOf="@id/textovic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/results"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver resultados"
        app:layout_constraintTop_toBottomOf="@id/textovic"
        app:layout_constraintStart_toEndOf="@+id/btnreini"
        app:layout_constraintEnd_toEndOf="parent"/>




</androidx.constraintlayout.widget.ConstraintLayout>